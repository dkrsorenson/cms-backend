{
  "name": "rajant-cms-api",
  "version": "1.0.0",
  "description": "REST API for Rajant Health technical assessment.",
  "main": "index.js",
  "scripts": {
    "build": "echo \"Building...\" && tsc --project tsconfig.json",
    "watch": "echo \"Building...\" && tsc -w --project tsconfig.json",
    "dev": "nodemon --watch src -e ts --exec ts-node -r dotenv/config src/index.ts --inspect",
    "start": "node dist/index.js",
    
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run --dataSource ./src/database/database.ts",

    "migration:run:dev": "PG_HOST=localhost NODE_PATH=./src ts-node ./node_modules/typeorm/cli.js migration:run --dataSource ./src/database/database.ts",
    "migration:revert": "PG_HOST=localhost NODE_PATH=./src ts-node ./node_modules/typeorm/cli.js migration:revert --config ./src/configs/db.config.ts",
    "migration:generate": "PG_HOST=localhost NODE_PATH=./src ts-node ./node_modules/.bin/typeorm migration:generate --pretty --config ./src/configs/db.config.ts -n",
    "migration:create": "PG_HOST=localhost NODE_PATH=./src ts-node ./node_modules/.bin/typeorm migration:create --config ./src/configs/db.config.ts -n",
    "seed:run": "NODE_PATH=./src ts-node ./node_modules/.bin/typeorm migration:run --config ./src/orm/config/ormconfig-seed.ts",
    "seed:run:dev": "PG_HOST=localhost NODE_PATH=./src ts-node ./node_modules/.bin/typeorm migration:run --config ./src/orm/config/ormconfig-seed.ts",
    "seed:create": "PG_HOST=localhost NODE_PATH=./src ts-node ./node_modules/.bin/typeorm migration:create --config ./src/orm/config/ormconfig-seed.ts -n"
  },
  "author": "Dakota Sorenson",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.2",
    "@types/pg": "^8.6.6",
    "@types/validator": "^13.7.15",
    "dotenv": "^16.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "express": "^4.18.2",
    "node-postgres": "^0.6.2",
    "pg": "^8.10.0",
    "typeorm": "^0.3.15"
  }
}
